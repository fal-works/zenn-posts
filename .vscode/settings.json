{
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": true
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.tabSize": 4,
    "files.insertFinalNewline": true
  },
  "markdownlint.config": {
    "MD007": { "indent": 4 },
    "MD012": { "maximum": 2 },
    "MD025": false,
    "MD034": false
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
